        </ComboBox>
        <ComboBox x:Name="cbin6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.499,1.299" Canvas.Left="704" Canvas.Top="175" Margin="742,118,0,0" Text="HH">
